<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/roundedRectangle"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:background="@drawable/rounded_rectangle_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="352dp"
        android:layout_height="579dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="32dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/roundedRectangle"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:id="@+id/no"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="7dp"
        android:background="@null"
        android:src="@drawable/no"
        app:layout_constraintStart_toStartOf="@+id/roundedRectangle"
        app:layout_constraintTop_toTopOf="@+id/roundedRectangle" />

    <ImageButton
        android:id="@+id/ok"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="7dp"
        android:background="@null"
        android:src="@drawable/ok"
        app:layout_constraintStart_toStartOf="@+id/roundedRectangle"
        app:layout_constraintTop_toTopOf="@+id/roundedRectangle" />

    <ImageButton
        android:id="@+id/galar"
        android:layout_width="120dp"
        android:layout_height="101dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:src="@drawable/galar"
        app:layout_constraintBottom_toTopOf="@+id/roundedRectangle"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/camera"
        android:layout_width="109dp"
        android:layout_height="123dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:src="@drawable/camera"
        app:layout_constraintBottom_toTopOf="@+id/roundedRectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/revers" />

    <ImageButton
        android:id="@+id/revers"
        android:layout_width="112dp"
        android:layout_height="102dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="12dp"
        android:background="@null"
        android:src="@drawable/revers"
        app:layout_constraintBottom_toTopOf="@+id/roundedRectangle"
        app:layout_constraintStart_toEndOf="@+id/galar" />

</androidx.constraintlayout.widget.ConstraintLayout>